<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>


<?import javafx.scene.layout.StackPane?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.classroomdef.control.Login" alignment="CENTER" spacing="10">

    <Label text="LOGIN" alignment="CENTER" layoutY="100.0" />

    <HBox alignment="CENTER">
        <Label fx:id= "usernameLabel" text="Username" minWidth="80"/>
        <TextField fx:id="usernameTextField"/>
    </HBox>
    <HBox alignment="CENTER">
        <Label fx:id= "passwordLabel" text="Password" minWidth="80"/>
        <PasswordField fx:id="passwordField"/>
    </HBox>
    <Button fx:id="loginButton" text="Login" onAction="#onLoginAction"/>

    <Label fx:id="errorManagament" text="error" visible="false"/>
</VBox>