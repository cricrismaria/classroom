<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.classroomdef.control.Register" alignment="CENTER" spacing="20">
    <Label text="Register" alignment="CENTER" layoutY="100.0" />
    <HBox alignment="CENTER" spacing="10">
        <Label fx:id= "nameLabel" text="Name" minWidth="80"/>
        <TextField fx:id="nameTextField"/>
    </HBox>
    <HBox alignment="CENTER" spacing="10">
        <Label fx:id= "usernameLabel" text="Username" minWidth="80"/>
        <TextField fx:id="usernameTextField"/>

    </HBox>
    <HBox alignment="CENTER" spacing="10">
        <Label fx:id= "passwordLabel" text="Password" minWidth="80"/>
        <TextField fx:id="passwordTextField"/>
    </HBox>

    <HBox alignment="CENTER" spacing="10">
        <Label fx:id="sexLabel" text="Sex:" minWidth="80"/>
        <RadioButton fx:id="femButton" text="Femenine"/>
        <RadioButton fx:id="mascButton" text="Masculine"/>
    </HBox>

    <HBox alignment="CENTER" spacing="10">
        <Label fx:id="profilePhoto" text="Profile photo" minWidth="80"/>

    </HBox>

    <Button fx:id="signUpButton" text="Sign Up" onAction="#onSignUpAction"/>

    <Label fx:id="errorManagament" text="error" visible="false"/>
</VBox>